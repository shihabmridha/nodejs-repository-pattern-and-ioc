{
  "name": "nodejs-repository-pattern-starter",
  "version": "0.0.1",
  "description": "A starter kit for nodejs web application using repository design patter",
  "main": "app.js",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build": "tsc -p .",
    "start": "node ./src/app.ts",
    "start:dev": "nodemon ./src/app.ts",
    "start:prod": "node ./build/src/app.js",
    "test": "jest --runInBand --forceExit --no-cache",
    "test:cov": "jest --coverage --forceExit",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "author": "Shihab Mridha",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "5.1.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "16.1.4",
    "express": "4.18.2",
    "inversify": "6.0.1",
    "mongodb": "5.8.0",
    "reflect-metadata": "0.1.13",
    "validator": "13.9.0",
    "winston": "3.9.0"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/compression": "1.7.0",
    "@types/cors": "2.8.6",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.17",
    "@types/jest": "^25.2.3",
    "@types/mongodb": "3.5.20",
    "@types/node": "10.12.9",
    "@types/source-map-support": "0.5.1",
    "@types/supertest": "2.0.8",
    "@types/validator": "12.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-junit-reporter": "^1.1.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "source-map-support": "0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
